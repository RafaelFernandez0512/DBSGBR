<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RemsyApp.Views.LoginPage"
             BackgroundImageSource="casaridao"
             xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView">
    <ContentPage.Content>
        <Grid >
            <BoxView BackgroundColor="#52557F"
                         Opacity="0.6"
                         />
            <Grid Padding="10" RowSpacing="10" RowDefinitions="1*,Auto,Auto,0.3*,0.3*,0.2*,*"
              
              >

                <Label Grid.Row="0"
                   TextColor="LavenderBlush"
                   Text="REMSY"
                       VerticalOptions="EndAndExpand"
                   HorizontalOptions="CenterAndExpand"
                   FontAttributes="Bold"
                   FontSize="Header"/>
                <Label Grid.Row="1"
                   TextColor="LavenderBlush"
                   Text="Real Estate"
                   HorizontalOptions="CenterAndExpand"
                   CharacterSpacing="5"
                   FontAttributes="Bold"
                   FontSize="20"/>
                
                <Entry Grid.Row="3"
                       Text="{Binding PersonDto.Name}"
                         TextColor="White"
                       PlaceholderColor="White"
                       FontAttributes="Italic"
                   Placeholder="Usuario"/>

              
             
                <Entry Grid.Row="4"
                   IsPassword="True"
                           Text="{Binding PersonDto.IdentityDocument}"
                         TextColor="White"
                       PlaceholderColor="White"
                   Placeholder="Contraseña"/>
                
                <yummy:PancakeView  Grid.Row="5"
                                    Padding="10"
                                CornerRadius="25"
                                    Margin="40,0,40,0"
                                BackgroundColor="Lavender">
                    <Label Text="Sign In"
                           HorizontalOptions="CenterAndExpand"
                           FontAttributes="Bold"
                           VerticalOptions="CenterAndExpand"
                           TextColor="Black"
                           FontSize="20"/>
                </yummy:PancakeView>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>